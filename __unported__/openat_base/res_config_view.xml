<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- Base Config Settings Form View -->
		<record id="view_openat_base_configuration" model="ir.ui.view">
			<field name="name">openat.base.settings</field>
			<field name="model">openat.base.config.settings</field>
			<field name="arch" type="xml">
				<form string="Configure" class="oe_form_configuration" version="7.0">
					<header>
						<button string="Apply" type="object" name="execute" class="oe_highlight" />
						or
						<button string="Cancel" type="object" name="cancel" class="oe_link" />
					</header>

					<separator string="OpenAT Settings" />
					<div>
						<p>
							<label
								string="Allows you to do the basic configuration for OpenERP and
install all important modules." />
						</p>
					</div>
					<separator string="Modules" />
					<group>
						<label for="id" string="Basic Modules" />
						<div name="basic_modules">
							<div name='basic_modules_container'>
								<field name="module_openat_aeroo_default_reports" class="oe_inline" />
								<label for="module_openat_aeroo_default_reports" />
							</div>
						</div>
					</group>
				</form>
			</field>
		</record>

		<!-- Base Config Settings Action -->
		<record id="action_openat_base_configuration" model="ir.actions.act_window">
			<field name="name">Configure</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">openat.base.config.settings</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
		</record>

		<!-- Base Config Settings Menu -->
		<menuitem id="menu_openat_base_configuration" action="action_openat_base_configuration"
			name="OpenAT Configuration" parent="base.menu_config" sequence="100" />

	</data>
</openerp>					